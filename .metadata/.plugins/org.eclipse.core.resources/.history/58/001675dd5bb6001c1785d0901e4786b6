server:
  port: 8080

spring:
  main:
  application:
    name: gateway-api
  cloud:
    gateway:
      routes:
      - id: city-api
        uri: lb://CITY-API
        predicates:
        - Path=/city-api/**
      - id: weather-api
        uri: lb://WEATHER-API
        predicates:
        - Path=/weather-api/**
      globalcors:
        corsConfigurations:
          '[/**]':
            allowedOrigins: "http://localhost:4200"  
eureka:
  client:
    service-url:
      default-zone: http://localhost:8761/eureka