package com.mindfire.cityservice.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.mindfire.cityservice.dto.CityWeatherReport;
import com.mindfire.cityservice.service.CityService;

@RestController
@RequestMapping("/city-api")
public class CityController {
	
	@Autowired
	public CityService cityService;
	
	/**
	 * This method adds a city to the CityList
	 * 
	 * @param cityName - The name of the city to be added
	 * @return List<String> 
	 */
	@GetMapping("/add")
	private List<String> add(@RequestParam("name") String cityName) {
		
		return cityService.add(cityName);
	}
	
	/**
	 *  This method fetches all the city names from the city List and returns updated list
	 * 
	 * @return List<String>
	 */
	@GetMapping("/all")
	private List<String> fetchAll(){
		
		return cityService.fetchAll();
	}
	
	/**
	 *  This method removes the city name from the list and returns updated list
	 * 
	 * @param cityName
	 * @return List<String> 
	 */
	@GetMapping("/delete")
	private List<String> delete(@RequestParam("name") String cityName){
		
		return cityService.delete(cityName);
	}
	
	@GetMapping("weather/all")
	public List<CityWeatherReport> getWeatherReport() {
		
		return cityService.getWeatherReport();
	}
	
	@GetMapping("/running-port")
	public String getPort() {
		
		return cityService.getPort();
	}
	
	
}
