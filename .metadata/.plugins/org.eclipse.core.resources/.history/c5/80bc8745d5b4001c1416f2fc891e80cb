package com.mindfire.cityservice.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.mindfire.cityservice.service.WeatherConsumerService;
import com.mindfire.cityservice.service.WeatherService;

@RestController
@RequestMapping("/city")
public class CityController {

	@Autowired
	public WeatherConsumerService consumerService;
	
	@Autowired
	public WeatherService weatherService;
	
	@GetMapping("/temperature/all")
	public Map<String,Integer> getTempretureofAllCities(){
		return weatherService.getWeatherDetails();
	}	
	
	@GetMapping("/producerPort")
	public String getPort() {
		return weatherService.getPort();
	}
	
	
}
