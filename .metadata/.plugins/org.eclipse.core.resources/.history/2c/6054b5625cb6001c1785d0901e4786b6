server:
  port: 8080

spring:
  main:
  application:
    name: gateway-api
  cloud:
    gateway:
      default-filters:
        - DedupeResponseHeader=Access-Control-Allow-Credentials Access-Control-Allow-Origin
      globalcors:
        corsConfigurations:
          '[/**]':
            allowedOrigins: "*"
      routes:
      - id: city-api
        uri: lb://CITY-API
        predicates:
        - Path=/city-api/**
      - id: weather-api
        uri: lb://WEATHER-API
        predicates:
        - Path=/weather-api/**  
eureka:
  client:
    service-url:
      default-zone: http://localhost:8761/eureka