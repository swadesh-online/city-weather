package com.mindfire.cityservice.dto;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@NoArgsConstructor
@AllArgsConstructor
public class CityWeatherReport {
	private @Getter @Setter String city;
	private @Getter @Setter String condition;
	private @Getter @Setter String maxTemperature;
	private @Getter @Setter String minTemperature;
	private @Getter @Setter String imageUrl;

	public CityWeatherReport(String city, String condition, double maxTemperature, double minTemperature, String imageUrl) {
		
		super();
		this.city = city;
		this.condition = condition;
		this.maxTemperature = Double.toString(maxTemperature);
		this.minTemperature = Double.toString(minTemperature);
		this.imageUrl = imageUrl;
	}		
}
