server:
  port: 8080

spring:
  application:
    name: gateway-api
  cloud:
    gateway:
      routes:
      - id: city-api
        uri: http://localhost:8082/
        predicates:
        - Path=/city/**
      - id: weather-api
        uri: http://localhost:9001/
        predicates:
        - Path=/weather/**
eureka:
  client:
    service-url:
      default-zone: http://localhost:8761/eureka

 