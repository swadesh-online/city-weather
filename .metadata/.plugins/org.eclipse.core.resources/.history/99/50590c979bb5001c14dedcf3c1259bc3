server:
  port: 8080

spring:
  application:
    name: gateway-api
  cloud:
    gateway:
      routes:
      - id: city-api
        uri: lb://city-service
        predicates:
        - Path=/city-api/**
      - id: weather-api
        uri: lb://weather-service
        predicates:
        - Path=/weather-api/**
eureka:
  client:
    service-url:
      default-zone: http://localhost:8761/eureka

 